<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45C6C2"
    tools:context=".lovezone">

    <TextView
        android:id="@+id/msgBox"
        android:layout_width="360dp"
        android:layout_height="213dp"
        android:layout_marginTop="72dp"
        android:background="#070707"
        android:gravity="bottom"
        android:hint="Your messages appear here"
        android:textAlignment="gravity"
        android:textColor="#F8ECEC"
        android:textColorHint="#6BEFB4B4"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editor"
        android:layout_width="351dp"
        android:layout_height="89dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="108dp"
        android:background="#500A0A"
        android:backgroundTint="#C8CDE4"
        android:ems="10"
        android:gravity="bottom"
        android:hint="Type your messages here..."

        android:inputType="textPersonName"
        android:textAlignment="gravity"
        android:textColorHint="#757575"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/send"
        android:layout_width="94dp"
        android:layout_height="46dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#28832B"
        android:onClick="send"
        android:text="Buzz"
        android:textColor="#3A3501"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/lovs"
        android:layout_width="356dp"
        android:layout_height="219dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgBox"
        app:srcCompat="@drawable/heart2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart4" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/afric2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart4" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="55dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/afric2" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart4" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toProfile"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:foreground="@drawable/heart5"
        android:onClick="toProfile"
        android:rotation="90"
        app:backgroundTint="#011B2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/heart5" />
</androidx.constraintlayout.widget.ConstraintLayout>